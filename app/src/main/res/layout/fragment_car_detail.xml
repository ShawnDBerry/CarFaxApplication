<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/car_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/year_make_model_trim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2011 BMW 3 Series 328i"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/current_price_mileage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/car_image" />

            <TextView
                android:id="@+id/current_price_mileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="$ 17,234 | 39.1k mi"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/vehicle_info_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/year_make_model_trim" />

            <TextView
                android:id="@+id/vehicle_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Vehicle Info"

                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_price_mileage"

                />

            <TextView
                android:id="@+id/vehicle_location_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Location"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_info_title"

                />

            <TextView
                android:id="@+id/vehicle_location_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Interior color"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_info_title"

                />

            <TextView
                android:id="@+id/vehicle_interior_color_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Interior color"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_location_property"

                />

            <TextView
                android:id="@+id/vehicle_interior_color_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="maissdvdfvdfvdfvdffi"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_location_value"

                />

            <TextView
                android:id="@+id/vehicle_exterior_color_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Exterior color"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_interior_color_value"

                />

            <TextView
                android:id="@+id/vehicle_exterior_color_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="maissdvdfvdfvdfvdffi"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_interior_color_value"

                />

            <TextView
                android:id="@+id/vehicle_drive_type_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Drive Type"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_exterior_color_property"

                />

            <TextView
                android:id="@+id/vehicle_drive_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="maissdvdfvdfvdfvdffi"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_exterior_color_value"

                />

            <TextView
                android:id="@+id/vehicle_transmission_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Transmission"
                android:textFontWeight="700"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_drive_type_property" />

            <TextView
                android:id="@+id/vehicle_transmission_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="maissdvdfvdfvdfvdffi"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_drive_type_value"

                />

            <TextView
                android:id="@+id/vehicle_engine_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Engine"
                android:textFontWeight="700"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_transmission_property" />

            <TextView
                android:id="@+id/vehicle_engine_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="maissdvdfvdfvdfvdffi"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:layout_margin="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_transmission_value"

                />

            <TextView
                android:id="@+id/vehicle_body_type_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Body Type"
                android:layout_margin="10dp"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_engine_value" />

            <TextView
                android:id="@+id/vehicle_body_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:text="maissdvdfvdfvdfvdffi"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_engine_value"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_dealer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="100dp"
                android:background="@color/button_color"
                android:text="Call Dealer"
                app:layout_constraintTop_toBottomOf="@id/vehicle_body_type_value"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
